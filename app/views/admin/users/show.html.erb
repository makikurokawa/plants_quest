<div class="container">
  <div class="row">
    <h4 class="bg-light my-5 ml-2 text-center col-4">
      <%= @user.name + "さんの会員詳細" %>
    </h4>
  </div>
  <div class="row">
    <div class="col-6">
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td> <%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @user.is_deleted == false %>
                <p class="text-success font-weight-bold">有効</p>
              <% else %>
                <p class="text-secondary font-weight-bold">退会</p>
              <% end %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= link_to "編集する", edit_admin_user_path, class: 'btn btn-sm btn-success px-3' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
