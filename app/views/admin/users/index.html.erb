<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light text-center col-2">会員一覧</h4>
  </div>
  <table class="table table-hover table-inverse">
    <thead class="table-secondary">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.id %>
          </td>
          <td>
            <%= link_to user.name, admin_user_path(user.id) %>
          </td>
          <td>
            <%= user.nickname %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <% if user.is_deleted == false %>
            <td class="text-success font-weight-bold">
              有効
            </td>
          <% else %>
            <td class="text-muted font-weight-bold">
              退会
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row my-3">
    <%= paginate @users %>
  </div>
</div>