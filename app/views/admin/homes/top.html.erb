<div class="container">
  <div class="row my-5 bg-light col-2">
    <h4>管理者トップページ　投稿一覧</h4>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="col-3">投稿日時</th>
          <th class="col-3">タイトル</th>
          <th class="col-3">投稿者(ニックネーム）</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td>
            <%= post.created_at %>
          </td>
          <td>
            <%= link_to post.title, admin_post_path(post.id) %>
          </td>
          <td>
            <%= post.user.nickname %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row my-3">
    <%= paginate @posts %>
  </div>
</div>

