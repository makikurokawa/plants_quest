<!DOCTYPE html>
<html>
  <head>
    <title>PlantsQuest</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand p-20" href="/">
          <h1 class="text-secondary font-weight-bold bg-warning p-2">PLANTS QUEST</h1>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <p class="mr-5">
              ようこそ、<%= current_user.nickname %>さん！
            </p>
            <li class="nav-item px-3">
              <%= link_to "マイページ", users_my_page_path, class: 'nav-links text-dark' %>
            </li>
            <li class="nav-item px-3">
              <%= link_to "投稿一覧", posts_path %>
            </li>
            <li class="nav-item px-3">
              <%= link_to "いいね一覧", favorites_path %>
            </li>
            <li class="nav-item px-3">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item px-3">
              <%= link_to "投稿記事一覧", admin_posts_path %>
            </li>
            <li class="nav-item px-3">
              <%= link_to "会員一覧", admin_users_path %>
            </li>
            <li class="nav-item px-3">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="nav-item px-3">
              <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>
            </li>
            <li class="nav-item px-3">
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
            <li class="nav-item px-3">
              <%= link_to "ログイン", new_user_session_path %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="bg-success pt-5 pb-4">
    </footer>
  </body>
</html>
