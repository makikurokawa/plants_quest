 <div class="containts">
   <div class="row">
    <h5 class="text-dark bg-light m-4 mb-0">記事を編集</h5>
  </div>
  <%= form_with model: @post, url: public_post_path(@post.id), method: :patch, local: true do |f| %>
    <%= f.file_field :images, multiple: true, class: "w-100" %>
    <%= "↑ Shiftキーを押しながら画像を複数選択してください。" %>
    <div class="input-group mb-3 mt-4">
      <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
    </div>
    <%= f.text_area :contents, class:"form-control", rows:"3", placeholder:"投稿内容" %>
    <%= f.fields_for :post_tags, @post.post_tags.build do |post_tag| %>
    <div class="field">
      <%= render 'post_tag_fields', f: post_tag %>
    </div>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'タグを追加', f, :post_tags %>
    </div>
    <div class="row mt-4 pb-5">
      <div class="form-inline mx-auto">
        <% if @post.is_draft == true %>
          <%= f.submit "公開", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning' %>
          <%= f.submit "下書きを更新", :name => 'update_draft', class:'mr-5 btn btn-sm btn-outline-secondary' %>
        <% else %>
          <%= f.submit "記事を更新", :name => 'update_post', class:'btn btn-sm btn-warning text-light' %>
        <% end %>
      </div>
    </div>
    <div class="mt-4 pb-3 text-center">
      <u><%= link_to "記事を削除", "/posts/#{@post.id}", method: :delete, data: {confirm: "この記事を削除しますか？"}, class:'text-danger' %></u>
    </div>
  <% end %>
    </div>
  <% end %>
 </div>